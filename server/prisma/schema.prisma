generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Conversation {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  messages  Message[]
}

enum Sender {
  USER
  AI
}

model Message {
  id             String       @id @default(uuid())
  text           String
  sender         Sender       @default(USER)
  createdAt      DateTime     @default(now())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

